{
  "compilerOptions": { 
    "target": "es2017",                         
    "module": "commonjs",                   
    "lib": ["ES6"],                            
     "allowJs": true,    
     "outDir": "./dist",                       
     "rootDir": "./src",
    "removeComments": true,    
     "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                      
     "resolveJsonModule": true,  
    
    "esModuleInterop": true,  
     "experimentalDecorators": true,       
     "emitDecoratorMetadata": true, 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "baseUrl": ".",
    "paths": {
      "@constrollers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
